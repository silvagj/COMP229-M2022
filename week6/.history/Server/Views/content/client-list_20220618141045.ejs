<div class="container">
    <div class="row text-secondary text-center p-2">
        <h2><%= title %></h2>
    </div>
    <div class="row">
        <div class="col">
            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus"></i>Add Client</a>
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Email address</th>
                        <th></th>
                        <th></th>
                    </tr>
                    <tbody id="clientList">
                        <!--Repeatable Rows-->
                        <% for (let count=0; count<clients.length; count++){ %>
                            <tr>
                                <th scope="row" class="text-center"> <%= count + 1 %></th>
                                <td><%= clients[count].FirstName %></td>
                                <td><%= clients[count].LastName %></td>
                                <td><%= clients[count].Number %></td>
                                <td><%= clients[count].Email %></td>
                                <td></td>
                                <td></td>
                            </tr>
    
                       <% } %>
                    </tbody>
                </thead>
            </table>
        </div>
    </div>
</div>

